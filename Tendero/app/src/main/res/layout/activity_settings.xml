<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarTheme" />

    <LinearLayout
        android:padding="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva Solicitud "/>

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Se creara una solicitud de mantenimiento la cual se solucionara lo mas pronto posible "/>

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/edt_text_solicitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el fallo encontrado"/>


        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btn_enviar_solicitud"
            android:textAllCaps="false"
            android:textColor="@color/md_white_1000"
            android:text="Enviar Solicitud"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"/>


    </LinearLayout>



</LinearLayout>
